@model IEnumerable<BusinessProject.Models.Service>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Service", FormMethod.Get))
{
    <p>
        Buscar Por Nombre: @Html.TextBox("Search")
        <input type="submit" value="Search" />
    </p>
}

<div class="box">
    @foreach (var item in Model)
    {
        <div class="col-4">

            <div class="card shadonbox" style="width:300px">
                <img src=" @Html.DisplayFor(modelItem => item.imageUrlServices)" alt="Sample Image" class="card-img-top" style=" width: 300px; height: 187.5px;border-radius: 5px;" />

                <div class="card-body" style="padding:2px;">

                    <div class="box">
                        <div><h4 class="card-title"> @Html.DisplayFor(modelItem => item.nameService)</h4></div>
                        <div><h4 class="card-title"> @Html.DisplayFor(modelItem => item.valueService)</h4>  </div>
                    </div>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.descriptionService)</p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idService }) |
                    @Html.ActionLink("Details", "Details", new { id = item.idService }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idService })
                </div>
            </div>

        </div>}
</div>
